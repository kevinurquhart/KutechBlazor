@page "/"
@inject IProductService ProductService
@inject ITrainingService TrainingService
@inject NavigationManager Navigation

<PageTitle>SQL Server Training, Consulting, and Support Services - Kutech</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title animate-fade-in">Expert SQL Server Training & Consultancy</h1>
        <p class="hero-subtitle animate-slide-up">Text goes here</p>
        <div class="hero-buttons animate-slide-up-delay">
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/training/courses")'>
                View Courses
            </button>
            <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/contact")'>
                Get In Touch
            </button>
        </div>
    </div>
    <div class="hero-image">
        <img src="/images/hero-bg.jpg" alt="SQL Server Training" />
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title">Why Choose Kutech?</h2>
        <div class="features-grid">
            <FeatureCard 
                Icon="fas fa-graduation-cap"
                Title="Expert Training"
                Description="Text goes here" />
            <FeatureCard 
                Icon="fas fa-laptop-code"
                Title="Flexible Learning"
                Description="Text goes here" />
            <FeatureCard 
                Icon="fas fa-users"
                Title="Professional Support"
                Description="Text goes here" />
            <FeatureCard 
                Icon="fas fa-certificate"
                Title="Certified Excellence"
                Description="Text goes here" />
        </div>
    </div>
</section>

<!-- Training Options -->
<section class="training-section">
    <div class="container">
        <h2 class="section-title">Training Options</h2>
        <div class="training-grid">
            <TrainingCard 
                Title="On Demand Training"
                Description="Text goes here"
                Price="From £395"
                Link="/training/on-demand"
                Icon="fas fa-play-circle" />
            <TrainingCard 
                Title="Remote Training"
                Description="Text goes here"
                Price="From £500"
                Link="/training/remote"
                Icon="fas fa-video" />
            <TrainingCard 
                Title="In-Person Training"
                Description="Text goes here"
                Price="Contact Us"
                Link="/training/in-person"
                Icon="fas fa-chalkboard-teacher" />
        </div>
    </div>
</section>

<!-- Featured Products -->
@if (featuredProducts != null && featuredProducts.Any())
{
    <section class="products-section">
        <div class="container">
            <h2 class="section-title">Featured Courses & Services</h2>
            <div class="products-grid">
                @foreach (var product in featuredProducts)
                {
                    <ProductCard Product="product" />
                }
            </div>
        </div>
    </section>
}

<!-- Services Section -->
<section class="services-section">
    <div class="container">
        <h2 class="section-title">Professional Services</h2>
        <div class="services-grid">
            <ServiceCard 
                Title="SQL Health Check"
                Description="Text goes here"
                Price="£195"
                Icon="fas fa-heartbeat"
                Link="/services/health-check" />
            <ServiceCard 
                Title="Consultancy"
                Description="Text goes here"
                Price="From £500"
                Icon="fas fa-briefcase"
                Link="/services/consultancy" />
            <ServiceCard 
                Title="Support Contracts"
                Description="Text goes here"
                Price="Custom"
                Icon="fas fa-handshake"
                Link="/services/support" />
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials-section">
    <div class="container">
        <h2 class="section-title">What Our Clients Say</h2>
        <TestimonialsCarousel />
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Ready to Enhance Your SQL Server Skills?</h2>
            <p>Text goes here</p>
            <button class="btn btn-large btn-white" @onclick='() => Navigation.NavigateTo("/contact")'>
                Start Your Journey
            </button>
        </div>
    </div>
</section>


