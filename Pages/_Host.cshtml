@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace KutechBlazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kutech - SQL Server Training, Consulting, and Support Services</title>
    <base href="~/" />

    <!-- Bootstrap CSS (optional, or use your preferred CSS framework) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/site.css" />

    <!-- Component styles -->
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <script src="_framework/blazor.server.js"></script>

    <!-- Optional: Bootstrap JS if you're using Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript if needed -->
    <script>
        // Reconnection handling for Blazor Server
        Blazor.start({
            reconnectionHandler: {
                onConnectionDown: (options, error) => {
                    console.log("Connection down");
                },
                onConnectionUp: () => {
                    console.log("Connection up");
                    location.reload();
                }
            }
        });

        // Custom function to handle cart updates if needed
        window.updateCartCount = (count) => {
            const cartBadge = document.querySelector('.cart-badge');
            if (cartBadge) {
                cartBadge.textContent = count;
                if (count > 0) {
                    cartBadge.style.display = 'flex';
                } else {
                    cartBadge.style.display = 'none';
                }
            }
        };

        // Smooth scroll function for navigation
        window.smoothScrollTo = (elementId) => {
            const element = document.getElementById(elementId);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        };
    </script>

    <!-- Connection lost UI -->
    <div id="reconnect-modal" style="display: none;" class="reconnect-modal">
        <div class="reconnect-modal-content">
            <h4>Connection Lost</h4>
            <p>Attempting to reconnect to the server...</p>
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>

    <style>
        .reconnect-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .reconnect-modal-content {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

            .reconnect-modal-content h4 {
                color: #2d3748;
                margin-bottom: 1rem;
            }

            .reconnect-modal-content p {
                color: #718096;
                margin-bottom: 1rem;
            }
    </style>
</body>
</html>